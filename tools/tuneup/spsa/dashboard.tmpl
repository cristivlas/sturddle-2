<!DOCTYPE html>
<html>
<head>
    <title>Sturddle SPSA Tuner {version}</title>
    <link rel="icon" href="/static/chess.ico">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {{ margin: 0; padding: 0; box-sizing: border-box; }}
        :root {{
            --accent-start: #667eea;
            --accent-end: #764ba2;
        }}
        body {{
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", sans-serif;
            background: linear-gradient(135deg, var(--accent-start) 0%, var(--accent-end) 100%);
            min-height: 100vh;
            padding: 12px;
            transition: background 1s ease;
        }}
        .container {{
            max-width: 1400px;
            height: calc(100vh - 24px);
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }}
        .header {{
            background: linear-gradient(135deg, var(--accent-start) 0%, var(--accent-end) 100%);
            color: white;
            padding: 10px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background 1s ease;
        }}
        .header h1 {{
            font-size: 18px;
            font-weight: 700;
        }}
        .header-buttons {{
            display: flex;
            gap: 8px;
        }}
        .status-badge {{
            background: rgba(255,255,255,0.2);
            padding: 6px 16px;
            border-radius: 16px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: white;
            text-decoration: none;
        }}
        .content {{
            padding: 20px 24px;
            flex: 1;
            overflow-y: auto;
            min-height: 0;
            display: flex;
            flex-direction: column;
        }}
        .grid {{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 16px;
            margin-bottom: 20px;
        }}
        .card {{
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 14px 16px;
            background: #f9f9f9;
        }}
        .card canvas {{
            width: 100%;
            height: 380px;
            max-height: 450px;
            display: block;
        }}
        .card h2 {{
            font-size: 12px;
            font-weight: 600;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }}
        .card-value {{
            font-size: 20px;
            font-weight: 700;
            color: #333;
            font-family: monospace;
        }}
        .card-subtext {{
            font-size: 12px;
            color: #999;
            margin-top: 4px;
        }}
        .progress-bar {{
            width: 100%;
            height: 20px;
            background: #e0e0e0;
            border-radius: 10px;
            overflow: hidden;
            margin-top: 8px;
        }}
        .progress-fill {{
            height: 100%;
            background: linear-gradient(90deg, var(--accent-start) 0%, var(--accent-end) 100%);
            transition: width 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            color: white;
            font-weight: 600;
            min-width: 40px;
        }}
        .section {{
            margin-top: 20px;
        }}
        .section h3 {{
            font-size: 14px;
            font-weight: 700;
            margin-bottom: 10px;
            color: #333;
            border-bottom: 2px solid var(--accent-start);
            padding-bottom: 6px;
        }}
        table {{
            width: 100%;
            border-collapse: collapse;
        }}
        th, td {{
            padding: 8px 12px;
        }}
        th {{
            background: #f0f0f0;
            font-weight: 600;
            font-size: 11px;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }}
        td {{
            border-bottom: 1px solid #e0e0e0;
            font-size: 13px;
            white-space: nowrap;
        }}
        th:first-child, td:first-child {{
            text-align: left;
        }}
        th:not(:first-child), td:not(:first-child) {{
            text-align: right;
        }}
        tr:hover {{
            background: #f9f9f9;
        }}
        .stats-grid {{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 12px;
            margin-bottom: 20px;
        }}
        .stat {{
            background: white;
            border-left: 4px solid var(--accent-start);
            padding: 10px 14px;
            border-radius: 4px;
        }}
        .stat-label {{
            font-size: 11px;
            color: #999;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }}
        .stat-value {{
            font-size: 20px;
            font-weight: 700;
            color: #333;
            font-family: monospace;
        }}
        .two-col {{
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }}
        .params-tbl {{
            table-layout: fixed;
            width: 100%;
        }}
        @media (max-width: 700px), (max-height: 500px) {{
            .header {{ flex-wrap: wrap; gap: 6px; justify-content: center; }}
            .container {{ height: auto; min-height: 100vh; }}
            .two-col, .two-col[style] {{ grid-template-columns: 1fr !important; }}
            .stats-grid {{ grid-template-columns: 1fr 1fr; }}
            a[href="/logs"] {{ display: none; }}
            th, td {{ padding: 6px 4px; font-size: 11px; }}
            .params-tbl {{ table-layout: auto; }}
        }}
        .bottom-panel {{
            flex: 1;
            min-height: 0;
            grid-template-rows: 1fr;
        }}
        .bottom-panel > .section {{
            display: flex;
            flex-direction: column;
            min-height: 0;
        }}
        .bottom-panel > .section > div:last-child {{
            flex: 1;
            min-height: 0;
            max-height: none !important;
        }}
        /* Thin scrollbars for all scrollable areas */
        .content, .content div {{
            scrollbar-width: thin;
            scrollbar-color: rgba(0,0,0,0.25) transparent;
        }}
        .content::-webkit-scrollbar, .content div::-webkit-scrollbar {{
            width: 6px;
        }}
        .content::-webkit-scrollbar-track, .content div::-webkit-scrollbar-track {{
            background: transparent;
        }}
        .content::-webkit-scrollbar-thumb, .content div::-webkit-scrollbar-thumb {{
            background: rgba(0,0,0,0.25);
            border-radius: 3px;
        }}
        .content::-webkit-scrollbar-thumb:hover, .content div::-webkit-scrollbar-thumb:hover {{
            background: rgba(0,0,0,0.4);
        }}
        .refresh-info {{
            padding: 4px 24px;
            font-size: 12px;
            color: #999;
            text-align: center;
            border-top: 1px solid #eee;
            flex-shrink: 0;
        }}
    </style>
    <!-- Time-of-day theme (keep in sync across dashboard/charts/logs templates) -->
    <script>
        function applyTimeTheme() {{
            var h = new Date().getHours();
            var s, e;
            if      (h >= 6  && h < 12) {{ s = '#5ba0b5'; e = '#82c4d8'; }}
            else if (h >= 12 && h < 18) {{ s = '#667eea'; e = '#764ba2'; }}
            else if (h >= 18 && h < 22) {{ s = '#c0766d'; e = '#8e6399'; }}
            else                        {{ s = '#3d4f7c'; e = '#1a1a2e'; }}
            document.documentElement.style.setProperty('--accent-start', s);
            document.documentElement.style.setProperty('--accent-end', e);
            if (typeof setThetaView === 'function') setThetaView(showInternal);
        }}
        applyTimeTheme();
        setInterval(applyTimeTheme, 3600000);
    </script>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Sturddle SPSA Tuner {version}</h1>
            <div class="header-buttons">
                <a href="/charts" class="status-badge">Charts</a>
                <a href="/logs" class="status-badge">Logs</a>
                <span class="status-badge" id="statusBadge" style="background:{status_color}">{status_text}</span>
            </div>
        </div>

        <div class="content">
            <!-- Overall Progress -->
            <div class="grid">
                <div class="card">
                    <h2>Iteration Progress</h2>
                    <div class="card-value" id="iterValue">{iteration} / {max_iters}</div>
                    <div class="progress-bar">
                        <div class="progress-fill" id="iterFill" style="width: {progress}%;">
                            {progress:.0f}%
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h2>Games This Iteration</h2>
                    <div class="card-value" id="gamesValue">{games_done} / {games_total}</div>
                    <div class="progress-bar">
                        <div class="progress-fill" id="gamesFill" style="width: {iter_progress}%;">
                            {iter_progress:.0f}%
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h2>Scheduled Work</h2>
                    <div class="card-value" id="pendingValue">{games_pending}</div>
                    <div class="card-subtext">games pending completion</div>
                </div>
            </div>

            <!-- Advanced Stats -->
            <div class="stats-grid">
                <div class="stat">
                    <div class="stat-label">Learning Rate (a_k)</div>
                    <div class="stat-value" id="akValue">{a_k:.6f}</div>
                </div>
                <div class="stat">
                    <div class="stat-label">Perturbation (c_k)</div>
                    <div class="stat-value" id="ckValue">{c_k:.6f}</div>
                </div>
                <div class="stat">
                    <div class="stat-label">Avg / Iteration</div>
                    <div class="stat-value" id="avgIterValue">--</div>
                </div>
                <div class="stat">
                    <div class="stat-label">Total Games</div>
                    <div class="stat-value" id="totalGamesValue">{total_games}</div>
                </div>
            </div>

            <!-- Chart + Current Parameters side by side -->
            <div class="two-col" style="margin-bottom: 20px; grid-template-columns: 3fr 2fr;">
                <div class="card">
                    <canvas id="thetaChart" width="400" height="200"></canvas>
                </div>
                <div class="section" style="margin-top: 0;">
                    <h3 style="display:flex;align-items:baseline;gap:8px;">Current Parameters
                        <span id="thetaToggle" style="display:none;font-size:0;line-height:0;margin-left:auto;">
                            <span id="togInternal" onclick="setThetaView(true)"
                                style="font-size:11px;padding:2px 8px;cursor:pointer;border:1px solid #ccc;border-radius:4px 0 0 4px;font-weight:600;letter-spacing:0;text-transform:none;">Internal</span><span
                                id="togEngine" onclick="setThetaView(false)"
                                style="font-size:11px;padding:2px 8px;cursor:pointer;border:1px solid #ccc;border-left:none;border-radius:0 4px 4px 0;font-weight:600;letter-spacing:0;text-transform:none;">Engine</span>
                        </span>
                    </h3>
                    <table class="params-tbl">
                        <colgroup><col style="width:50%"><col style="width:50%"></colgroup>
                        <thead>
                            <tr>
                                <th>Parameter</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                    </table>
                    <div style="max-height: 260px; overflow-y: auto;">
                    <table class="params-tbl">
                        <colgroup><col style="width:50%"><col style="width:50%"></colgroup>
                        <tbody id="thetaBody"></tbody>
                    </table>
                    </div>
                </div>
            </div>

            <!-- Workers + Recent History side by side -->
            <div class="two-col bottom-panel">
                <div class="section" style="margin-top: 0;">
                    <h3>Workers</h3>
                    <table style="table-layout:fixed; width:100%;">
                        <colgroup><col style="width:18%"><col style="width:14%"><col style="width:17%"><col style="width:17%"><col style="width:17%"><col style="width:17%"></colgroup>
                        <thead><tr><th>Name</th><th>Status</th><th>Seen</th><th>Assigned</th><th>Iter</th><th>Session</th></tr></thead>
                    </table>
                    <div style="max-height: 260px; overflow-y: auto;">
                    <table style="table-layout:fixed; width:100%;">
                        <colgroup><col style="width:18%"><col style="width:14%"><col style="width:17%"><col style="width:17%"><col style="width:17%"><col style="width:17%"></colgroup>
                        <tbody id="workersBody"></tbody>
                    </table>
                    </div>
                </div>
                <div class="section" style="margin-top: 0;">
                    <h3 id="historyTitle">History (latest {dashboard_history})</h3>
                    <div style="flex-shrink: 0;">
                    <table style="table-layout:fixed; width:100%;">
                        <colgroup><col style="width:20%"><col style="width:20%"><col style="width:20%"><col style="width:20%"><col style="width:20%"></colgroup>
                        <thead><tr><th>Iter</th><th>Score Diff</th><th>ELO Diff</th><th>a_k</th><th>c_k</th></tr></thead>
                    </table>
                    </div>
                    <div style="max-height: 260px; overflow-y: auto;">
                    <table style="table-layout:fixed; width:100%;">
                        <colgroup><col style="width:20%"><col style="width:20%"><col style="width:20%"><col style="width:20%"><col style="width:20%"></colgroup>
                        <tbody id="historyBody"></tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="refresh-info" id="footerInfo">
            Session created {session_start} &middot; Last started {server_start} &middot; Updated {timestamp}
        </div>
    </div>

    <script>{chart_js}</script>
    <script id="history-data" type="application/json">{history_json}</script>
    <script id="theta-data" type="application/json">{theta_json}</script>
    <script id="theta-internal-data" type="application/json">{theta_internal_json}</script>
    <script id="workers-data" type="application/json">{workers_json}</script>
    <script>
        // --- Normalized/internal toggle ---
        var hasNormalized = {has_normalized};
        var showInternal = true;
        var currentTheta = {{}};
        var currentThetaInternal = {{}};

        function renderTheta(theta) {{
            const tbody = document.getElementById('thetaBody');
            tbody.innerHTML = '';
            for (const [name, value] of Object.entries(theta)) {{
                const tr = document.createElement('tr');
                var display = (typeof value === 'number' && !Number.isInteger(value)) ? value.toFixed(6) : value;
                tr.innerHTML = '<td style="font-family:monospace;overflow:hidden;text-overflow:ellipsis;" title="' + name + '">' + name + '</td>'
                             + '<td style="font-family:monospace;overflow:hidden;text-overflow:ellipsis;">' + display + '</td>';
                tbody.appendChild(tr);
            }}
        }}

        function setThetaView(internal) {{
            showInternal = internal;
            var accent = getComputedStyle(document.documentElement).getPropertyValue('--accent-start').trim();
            var ti = document.getElementById('togInternal');
            var te = document.getElementById('togEngine');
            ti.style.background = internal ? accent : '';
            ti.style.color = internal ? '#fff' : '#666';
            ti.style.borderColor = internal ? accent : '#ccc';
            te.style.background = internal ? '' : accent;
            te.style.color = internal ? '#666' : '#fff';
            te.style.borderColor = internal ? '#ccc' : accent;
            renderTheta(internal ? currentThetaInternal : currentTheta);
        }}

        function initToggle() {{
            if (hasNormalized) {{
                document.getElementById('thetaToggle').style.display = '';
                setThetaView(true);
            }}
        }}

        function renderWorkers(workers) {{
            workers.sort((a, b) => b.games_completed - a.games_completed);
            const tbody = document.getElementById('workersBody');
            tbody.innerHTML = '';
            workers.forEach(w => {{
                var style, status;
                if (w.status === 1) {{ style = 'color:#FF9800;font-weight:bold'; status = 'overdue'; }}
                else if (w.status === 2 || !w.alive) {{ style = 'color:#f44336;font-weight:bold'; status = 'timed out'; }}
                else {{ style = 'color:#4CAF50'; status = 'online'; }}
                var tip = w.name;
                if (w.sec_per_game != null) tip += ' | ' + w.sec_per_game.toFixed(1) + ' sec/game';
                if (w.chunk_eta > 0) tip += ' | ETA ~' + formatDuration(w.chunk_eta * 1000);
                const tr = document.createElement('tr');
                tr.title = tip;
                tr.innerHTML = '<td style="font-family:monospace;overflow:hidden;text-overflow:ellipsis;">' + w.name + '</td>'
                             + '<td style="' + style + '">' + status + '</td>'
                             + '<td>' + Math.round(w.last_seen_ago) + 's ago</td>'
                             + '<td>' + w.games_assigned + '</td>'
                             + '<td>' + w.games_completed_iter + '</td>'
                             + '<td>' + w.games_completed + '</td>';
                tbody.appendChild(tr);
            }});
        }}

        function historyRow(h) {{
            const sd = (h.score_diff >= 0 ? '+' : '') + h.score_diff.toFixed(4);
            const ed = (h.elo_diff >= 0 ? '+' : '') + h.elo_diff.toFixed(1);
            const tr = document.createElement('tr');
            tr.innerHTML = '<td>' + (h.iteration ?? '?') + '</td>'
                         + '<td>' + sd + '</td>'
                         + '<td>' + ed + '</td>'
                         + '<td>' + h.a_k.toFixed(6) + '</td>'
                         + '<td>' + h.c_k.toFixed(4) + '</td>';
            return tr;
        }}

        function renderHistory(history) {{
            history.sort((a, b) => (b.iteration || 0) - (a.iteration || 0));
            const tbody = document.getElementById('historyBody');
            tbody.innerHTML = '';
            history.forEach(h => tbody.appendChild(historyRow(h)));
        }}

        function updateHistoryTitle(total) {{
            var shown = document.getElementById('historyBody').children.length;
            var el = document.getElementById('historyTitle');
            if (el) el.textContent = 'History (' + shown + ' of ' + total + ' iterations)';
        }}

        // --- Initial render from baked-in data ---
        const sessionStart = '{session_start}';
        const initTheta = JSON.parse(document.getElementById('theta-data').textContent || '{{}}');
        const initThetaInternal = JSON.parse(document.getElementById('theta-internal-data').textContent || '{{}}');
        const initWorkers = JSON.parse(document.getElementById('workers-data').textContent || '[]');
        const initHistory = JSON.parse(document.getElementById('history-data').textContent || '[]');

        currentTheta = initTheta;
        currentThetaInternal = Object.keys(initThetaInternal).length ? initThetaInternal : initTheta;
        initToggle();
        renderTheta(hasNormalized ? currentThetaInternal : currentTheta);
        renderWorkers(initWorkers);
        renderHistory(initHistory);
        updateHistoryTitle({history_total});
        updateETA({total_games}, {games_done}, {games_total}, {iteration}, {max_iters});

        // --- Chart ---
        let thetaChart = null;
        (function() {{
            try {{
                const history = initHistory.slice().sort((a,b) => (a.iteration||0) - (b.iteration||0));
                if (!history.length) return;

                const labels = history.map(h => h.iteration);
                const thetaKeys = [...new Set(
                    history.flatMap(h => Object.keys(h.theta || {{}}))
                )];
                const datasets = thetaKeys.map(k => ({{
                    label: k,
                    data: history.map(h => (h.theta && k in h.theta) ? h.theta[k] : null),
                    tension: 0.25,
                    pointRadius: 2,
                    borderWidth: 2,
                }}));

                const ctx = document.getElementById('thetaChart').getContext('2d');
                thetaChart = new Chart(ctx, {{
                    type: 'line',
                    data: {{ labels, datasets }},
                    options: {{
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {{ legend: {{ position: 'bottom' }} }}
                    }}
                }});
            }} catch (e) {{
                console.error('Failed to render chart', e);
            }}
        }})();

        // --- ETA estimation ---
        function parseLocalTimestamp(s) {{
            // Parse "YYYY-MM-DD HH:MM:SS" as local time
            var p = s.split(/[- :]/);
            return new Date(p[0], p[1]-1, p[2], p[3], p[4], p[5]).getTime();
        }}
        function formatDuration(ms) {{
            if (!ms || !isFinite(ms) || ms < 0) return '--';
            var sec = Math.round(ms / 1000);
            if (sec < 120) return sec + 's';
            var min = Math.round(sec / 60);
            if (min < 120) return min + 'm';
            var hrs = (min / 60).toFixed(1);
            if (hrs < 48) return hrs + 'h';
            return (min / 1440).toFixed(1) + 'd';
        }}
        function updateETA(totalGames, gamesDone, gamesTotal, iteration, maxIters) {{
            var elapsed = Date.now() - parseLocalTimestamp(sessionStart);
            var etaIter = '', etaSession = '';
            if (elapsed > 10000 && totalGames > 0) {{
                var msPerGame = elapsed / totalGames;
                var gamesLeftIter = Math.max(0, gamesTotal - gamesDone);
                var gamesLeftTotal = gamesLeftIter + Math.max(0, maxIters - iteration) * gamesTotal;
                var fi = formatDuration(gamesLeftIter * msPerGame);
                var fs = formatDuration(gamesLeftTotal * msPerGame);
                if (fi !== '--') etaIter = fi;
                if (fs !== '--') etaSession = fs;
            }}
            var iterEl = document.getElementById('iterValue');
            var gamesEl = document.getElementById('gamesValue');
            iterEl.innerHTML = iteration + ' / ' + maxIters
                + (etaSession ? ' <span style="font-size:14px;color:#999;font-weight:normal">~' + etaSession + ' left</span>' : '');
            gamesEl.innerHTML = gamesDone + ' / ' + gamesTotal
                + (etaIter ? ' <span style="font-size:14px;color:#999;font-weight:normal">~' + etaIter + ' left</span>' : '');
            document.getElementById('avgIterValue').textContent =
                iteration > 0 ? formatDuration(elapsed / iteration) : '--';
        }}

        // --- SSE live updates ---
        let knownHistoryLen = {history_total};
        const serverStart = '{server_start}';

        const sse = new EventSource('/sse');
        sse.onmessage = function(event) {{
            const d = JSON.parse(event.data);

            // Cards
            document.getElementById('iterFill').style.width = d.progress + '%';
            document.getElementById('iterFill').textContent = Math.round(d.progress) + '%';
            document.getElementById('gamesFill').style.width = d.iter_progress + '%';
            document.getElementById('gamesFill').textContent = Math.round(d.iter_progress) + '%';
            document.getElementById('pendingValue').textContent = d.games_pending;

            // Stats
            document.getElementById('akValue').textContent = d.a_k.toFixed(6);
            document.getElementById('ckValue').textContent = d.c_k.toFixed(6);
            document.getElementById('totalGamesValue').textContent = d.total_games;

            // Status badge
            const badge = document.getElementById('statusBadge');
            badge.textContent = d.status_text;
            badge.style.background = d.status_color;

            // Tables
            currentTheta = d.theta;
            if (d.theta_internal) currentThetaInternal = d.theta_internal;
            renderTheta(showInternal ? currentThetaInternal : currentTheta);
            renderWorkers(d.workers);

            // History: detect reset (--clean) or missed entries, append new
            if (d.history_len < knownHistoryLen) {{
                // Server history shrunk (restart with --clean) — resync
                location.reload();
                return;
            }}
            if (d.history_len > knownHistoryLen) {{
                if (d.history_len - knownHistoryLen > 1) {{
                    // Missed entries — full reload to resync
                    location.reload();
                    return;
                }}
                if (d.last_history) {{
                    // Prepend to table (newest first)
                    const tbody = document.getElementById('historyBody');
                    tbody.insertBefore(historyRow(d.last_history), tbody.firstChild);

                    // Update chart
                    if (thetaChart && d.last_history.theta) {{
                        thetaChart.data.labels.push(d.last_history.iteration);
                        thetaChart.data.datasets.forEach(ds => {{
                            const val = (d.last_history.theta && ds.label in d.last_history.theta)
                                ? d.last_history.theta[ds.label] : null;
                            ds.data.push(val);
                        }});
                        thetaChart.update();
                    }}
                }}
                knownHistoryLen = d.history_len;
            }}

            updateHistoryTitle(d.history_len);

            // Theme
            applyTimeTheme();

            // ETA
            updateETA(d.total_games, d.games_done, d.games_total, d.iteration, d.max_iters);

            // Footer
            document.getElementById('footerInfo').innerHTML =
                'Session created ' + sessionStart + ' &middot; Last started ' + d.server_start
                + ' &middot; Updated ' + d.timestamp;
        }};
    </script>
