<!DOCTYPE html>
<html>
<head>
    <title>SPSA Tuning Coordinator</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {{ margin: 0; padding: 0; box-sizing: border-box; }}
        body {{
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 12px;
        }}
        .container {{
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }}
        .header {{
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 10px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }}
        .header h1 {{
            font-size: 18px;
            font-weight: 700;
        }}
        .status-badge {{
            background: {status_color};
            padding: 6px 16px;
            border-radius: 16px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }}
        .content {{
            padding: 20px 24px;
        }}
        .grid {{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 16px;
            margin-bottom: 20px;
        }}
        .card {{
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 14px 16px;
            background: #f9f9f9;
        }}
        .card canvas {{
            width: 100%;
            height: 380px;
            max-height: 450px;
            display: block;
        }}
        .card h2 {{
            font-size: 12px;
            font-weight: 600;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }}
        .card-value {{
            font-size: 20px;
            font-weight: 700;
            color: #333;
            font-family: monospace;
        }}
        .card-subtext {{
            font-size: 12px;
            color: #999;
            margin-top: 4px;
        }}
        .progress-bar {{
            width: 100%;
            height: 20px;
            background: #e0e0e0;
            border-radius: 10px;
            overflow: hidden;
            margin-top: 8px;
        }}
        .progress-fill {{
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transition: width 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            color: white;
            font-weight: 600;
            min-width: 40px;
        }}
        .section {{
            margin-top: 20px;
        }}
        .section h3 {{
            font-size: 14px;
            font-weight: 700;
            margin-bottom: 10px;
            color: #333;
            border-bottom: 2px solid #667eea;
            padding-bottom: 6px;
        }}
        table {{
            width: 100%;
            border-collapse: collapse;
        }}
        th, td {{
            padding: 8px 12px;
        }}
        th {{
            background: #f0f0f0;
            font-weight: 600;
            font-size: 11px;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }}
        td {{
            border-bottom: 1px solid #e0e0e0;
            font-size: 13px;
        }}
        th:first-child, td:first-child {{
            text-align: left;
        }}
        th:not(:first-child), td:not(:first-child) {{
            text-align: right;
        }}
        tr:hover {{
            background: #f9f9f9;
        }}
        .stats-grid {{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 12px;
            margin-bottom: 20px;
        }}
        .stat {{
            background: white;
            border-left: 4px solid #667eea;
            padding: 10px 14px;
            border-radius: 4px;
        }}
        .stat-label {{
            font-size: 11px;
            color: #999;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }}
        .stat-value {{
            font-size: 20px;
            font-weight: 700;
            color: #333;
            font-family: monospace;
        }}
        .two-col {{
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }}
        @media (max-width: 700px) {{
            .two-col {{ grid-template-columns: 1fr; }}
        }}
        .refresh-info {{
            text-align: center;
            color: #999;
            font-size: 11px;
            margin-top: 20px;
            padding-top: 12px;
            border-top: 1px solid #e0e0e0;
        }}
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Sturddle SPSA Tuner {version}</h1>
            <div>
                <a href="/charts" class="status-badge" style="text-decoration:none; color:white; background:rgba(255,255,255,0.2);">Charts</a>
                <a href="/logs" class="status-badge" style="text-decoration:none; color:white; background:rgba(255,255,255,0.2);">Logs</a>
                <span class="status-badge">{status_text}</span>
            </div>
        </div>

        <div class="content">
            <!-- Overall Progress -->
            <div class="grid">
                <div class="card">
                    <h2>Iteration Progress</h2>
                    <div class="card-value">{iteration} / {max_iters}</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: {progress}%;">
                            {progress:.0f}%
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h2>Games This Iteration</h2>
                    <div class="card-value">{games_done} / {games_total}</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: {iter_progress}%;">
                            {iter_progress:.0f}%
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h2>Work Status</h2>
                    <div class="card-value">{games_pending}</div>
                    <div class="card-subtext">games pending completion</div>
                </div>
            </div>

            <!-- Advanced Stats -->
            <div class="stats-grid">
                <div class="stat">
                    <div class="stat-label">Learning Rate (a_k)</div>
                    <div class="stat-value">{a_k:.6f}</div>
                </div>
                <div class="stat">
                    <div class="stat-label">Perturbation (c_k)</div>
                    <div class="stat-value">{c_k:.6f}</div>
                </div>
                <div class="stat">
                    <div class="stat-label">Total Games</div>
                    <div class="stat-value">{total_games}</div>
                </div>
            </div>

            <!-- Chart + Current Parameters side by side -->
            <div class="two-col" style="margin-bottom: 20px; grid-template-columns: 3fr 2fr;">
                <div class="card">
                    <canvas id="thetaChart" width="400" height="200"></canvas>
                </div>
                <div class="section" style="margin-top: 0;">
                    <h3>Current Parameters</h3>
                    <table style="table-layout:fixed; width:100%;">
                        <colgroup><col style="width:50%"><col style="width:50%"></colgroup>
                        <thead>
                            <tr>
                                <th>Parameter</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                    </table>
                    <div style="max-height: 260px; overflow-y: auto;">
                    <table style="table-layout:fixed; width:100%;">
                        <colgroup><col style="width:50%"><col style="width:50%"></colgroup>
                        <tbody>
                            {theta_rows}
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>

            <!-- Workers + Recent History side by side -->
            <div class="two-col">
                {workers_section}
                {history_section}
            </div>

            <div class="refresh-info">
                Session created {session_start} &middot; Last started {server_start} &middot; Refreshes every {refresh_sec}s &middot; {timestamp}
            </div>
        </div>
    </div>

    <script>
        setTimeout(function() {{
            location.reload();
        }}, {refresh_ms});
    </script>
    <script>{chart_js}</script>
    <script id="history-data" type="application/json">{history_json}</script>
    <script>
        (function() {{
            try {{
                const raw = document.getElementById('history-data').textContent || '[]';
                const history = JSON.parse(raw || '[]') || [];
                if (!history || !history.length) return;

                history.sort((a,b)=> (a.iteration||0) - (b.iteration||0));
                const labels = history.map(h => h.iteration);

                const thetaKeys = [...new Set(
                    history.flatMap(h => Object.keys(h.theta || {{ }}))
                )];

                const datasets = thetaKeys.map(k => ({{
                    label: k,
                    data: history.map(h => (h.theta && k in h.theta) ? h.theta[k] : null),
                    tension: 0.25,
                    pointRadius: 2,
                    borderWidth: 2,
                }}));

                const ctx = document.getElementById('thetaChart').getContext('2d');
                new Chart(ctx, {{
                    type: 'line',
                    data: {{
                        labels: labels,
                        datasets: datasets
                    }},
                    options: {{
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {{ legend: {{ position: 'bottom' }} }}
                    }}
                }});
            }} catch (e) {{
                console.error('Failed to render charts', e);
            }}
        }})();
    </script>
</body>
</html>
